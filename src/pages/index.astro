---
import Layout from '../layouts/Layout.astro';
import PostsList from '../components/PostsList.astro'; 
import { getCollection } from "astro:content";

const posts = await getCollection("posts"); 
---

<Layout title="Edrees Wahezi">
	
	<main>
		<div class="container">
			<header class="main-content-header">
				<h1>Hi, I'm Edrees.</h1>
				<p>Welcome to my website.</p>
				<p>If you're new here, make sure to check out my <a href="/about">About Me</a> page and my <a href="/links">Links</a> page.</p>
				<p>Enjoy your stay.</p>
			</header>

			<section>
				<h2>Most Recent Blog Posts</h2>
				<PostsList
					posts={posts}
					num={3} />		
			</section>

		</div>
	</main>

</Layout>

