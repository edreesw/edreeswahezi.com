<header id="nav-header">
    <div class="container">
        <nav>
            <div id="nav-title-row">
                <a id="logo-container" href="/">
                    <img class="logo" src="/mirrorshieldpixel.png" alt="Edrees's Mirror Shield Pixel Logo">
                    <span id="header-text">Edrees Wahezi</span>
                </a>

                <div id="header-buttons-container">
                    <ThemeButton />
                    <a href="/rss.xml" id="nav-rss-link">RSS</a>
                </div>
                
            </div>


            <ul id="nav-tabs-list">
                <li><a href="/about">About</a></li>
                <li>/</li>
            <!--
                <li><a href="/dev">Dev</a></li>
